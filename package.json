{
  "name": "setup-jest-with-coverage",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "jest": "^23.1.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "*.js"
    ],
    "coverageThreshold": {
      "global": {
        "statments": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  }
}
